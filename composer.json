{
    "name": "f4lk0n/core-dev",
    "description": "Debug helper",
    "type": "library",
    "keywords": [
        "debug",
        "dump"
    ],
    "homepage": "https://github.com/FalkonCorp/core-dev",
    "license": "MIT",
    "authors": [
        {
            "name": "F4lk0n"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "F4lk0n\\CoreDev\\": "src/"
        },
        "files": [
            "src/VDD.php"
        ]
    },
    
    "minimum-stability": "stable",
    
    "scripts": {
        "da": "composer dumpautoload",
        "dao": "composer dumpautoload --classmap-authoritative --optimize",

        "test":  "/src/vendor/bin/phpunit --no-coverage",
        "dox":   "/src/vendor/bin/phpunit --no-coverage --testdox",
        "cover": "/src/vendor/bin/phpunit"
    }
}
